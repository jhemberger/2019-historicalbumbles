file = {:Users/jhemberger/Library/Application Support/Mendeley Desktop/Downloaded/H{\"{a}}ussler et al. - 2017 - Pollinator population size and pollination ecosystem service responses to enhancing floral and nesting resourc.pdf:pdf},
issn = {20457758},
journal = {Ecol. Evol.},
keywords = {bee foraging,bumble bees,crop pollination,ecosystem service mapping,landscape ecology,natural capital,pollination model,population dynamics,wildflower habitat},
number = {6},
pages = {1898--1908},
title = {{Pollinator population size and pollination ecosystem service responses to enhancing floral and nesting resources}},
