doi = {10.1007/s10980-015-0259-4},
file = {:Users/jhemberger/Library/Application Support/Mendeley Desktop/Downloaded/Bertrand, Burel, Baudry - 2016 - Spatial and temporal heterogeneity of the crop mosaic influences carabid beetles in agricultural landsc.pdf:pdf},
