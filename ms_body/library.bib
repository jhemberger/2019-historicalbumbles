doi = {10.1371/journal.pone.0158117},
file = {:Users/jhemberger/Library/Application Support/Mendeley Desktop/Downloaded/Hicks et al. - 2016 - Food for pollinators Quantifying the nectar and pollen resources of urban flower meadows.pdf:pdf},
isbn = {1932-6203 (Electronic)$\backslash$r1932-6203 (Linking)},
