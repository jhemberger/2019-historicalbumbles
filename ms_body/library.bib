issn = {19395582},
journal = {Ecol. Appl.},
keywords = {Maxent,climate change impact,endemic species,expert knowledge,fine-scale data,rainforest,refugia,species distribution modeling},
number = {1},
pages = {1--15},
title = {{Beyond the model: expert knowledge improves predictions of species' fates under climate change}},
volume = {29},
year = {2019}
}
