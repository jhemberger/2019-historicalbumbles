journal = {Behav. Ecol.},
keywords = {Division of labor,Nest climate,Reinforcement,Response thresholds,Self-organization},
number = {1},
pages = {120--128},
pmid = {26909189},
title = {{The control of nest climate in bumblebee (Bombus terrestris) colonies: Interindividual variability and self reinforcement in fanning response}},
