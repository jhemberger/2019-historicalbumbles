doi = {10.1007/s004420000478},
file = {:Users/jhemberger/Library/Application Support/Mendeley Desktop/Downloaded/Wilby, Shachak - 2000 - Harvester ant response to spatial and temporal heterogeneity in seed availability pattern in the process of gran.pdf:pdf},
isbn = {0029-8549},
issn = {0029-8549},
journal = {Oecologia},
keywords = {QH301 Biology},
number = {4},
pages = {495--503},
title = {{Harvester ant response to spatial and temporal heterogeneity in seed availability: pattern in the process of granivory.}},
url = {http://www.springerlink.com/content/l657ghv684egm93x/?p=4216f8efa9bd474ab8af6967b3e3bb4b{\&}pi=5},
