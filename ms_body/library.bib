@article{Stelzer2010,
abstract = {BACKGROUND: Foraging bumblebees are normally associated with spring and summer in northern Europe. However, there have been sightings of the bumblebee Bombus terrestris during the warmer winters in recent years in southern England. But what floral resources are they relying upon during winter and how much winter forage can they collect?

