isbn = {13541013},
issn = {13652486},
journal = {Glob. Chang. Biol.},
keywords = {Avian ecology,Citizen science,Climate change,Community temperature index,Project FeederWatch,Winter warming},
number = {2},
pages = {572--585},
pmid = {25322929},
title = {{Climate change in our backyards: The reshuffling of North America's winter bird communities}},
