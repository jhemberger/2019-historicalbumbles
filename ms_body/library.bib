journal = {Ecology},
keywords = {Dendroctonus pondcrosae,Density compensation,Foraging guilds,Forest birds,More individuals hypothesis,Resource pulse,Resource specialization hypothesis},
number = {4},
pages = {1095--1105},
pmid = {19449703},
title = {{Species - Energy theory, pulsed resources, and regulation of avian richness during a mountain pine beetle outbreak}},
