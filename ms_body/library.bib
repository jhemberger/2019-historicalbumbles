doi = {10.1002/ece3.3914},
file = {:Users/jhemberger/Documents/paper{\_}pdfs/Descamps{\_}et{\_}al-2018-Ecology{\_}and{\_}Evolution.pdf:pdf},
issn = {20457758},
journal = {Ecol. Evol.},
keywords = {Borago officinalis,flower rewards,high temperature,nectar,pollen,water stress},
