doi = {10.1016/j.agee.2016.12.039},
file = {:Users/jhemberger/Library/Application Support/Mendeley Desktop/Downloaded/Kallioniemi et al. - 2017 - Local resources, linear elements and mass-flowering crops determine bumblebee occurrences in moderately inte.pdf:pdf},
isbn = {0167-8809},
issn = {01678809},
journal = {Agric. Ecosyst. Environ.},
keywords = {Agricultural landscapes,Bombus,Ecosystem services,Landscape ecology,Linear features,Mass-flowering crops,Pollinators},
