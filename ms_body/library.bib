issn = {14391791},
journal = {Basic Appl. Ecol.},
keywords = {agroecology,carabid beetles,field margins,grain size,mean field size,natural enemies,pest predation,seasonal variability,spiders,temporal patterns},
number = {8},
pages = {678--687},
title = {{Seasonal variation in the effect of landscape structure on ground-dwelling arthropods and biological control potential}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S1439179116301013},
