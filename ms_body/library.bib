issn = {0012-9658},
journal = {Ecology},
keywords = {Animals,Antelopes,Antelopes: physiology,Carnivora,Carnivora: physiology,Demography,Equidae,Equidae: physiology,Predatory Behavior,Swine,Swine: physiology},
month = {mar},
