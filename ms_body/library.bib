isbn = {0304-3800},
issn = {03043800},
journal = {Ecol. Modell.},
keywords = {Climate change,European corn borer,Linear vs nonlinear models,Modelling approaches,Phenological development},
pages = {65--74},
publisher = {Elsevier B.V.},
title = {{Comparison of modelling approaches to simulate the phenology of the European corn borer under future climate scenarios}},
url = {http://dx.doi.org/10.1016/j.ecolmodel.2012.03.034},
volume = {245},
year = {2012}
}
