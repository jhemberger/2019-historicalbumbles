keywords = {Apoidea,agri-environment,agroecosystems,bee conservation,biodiversity,farmland,habitat quality,pollen diet,pollinator schemes,wild bees},
pages = {n/a--n/a},
title = {{Providing foraging resources for solitary bees on farmland: current schemes for pollinators benefit a limited suite of species}},
