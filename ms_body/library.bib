doi = {10.1186/1756-3305-6-9},
file = {:Users/jhemberger/Library/Application Support/Mendeley Desktop/Downloaded/Gardner et al. - 2013 - Terrestrial vegetation and aquatic chemistry influence larval mosquito abundance in catch basins, Chicago, USA.pdf:pdf},
issn = {1756-3305},
journal = {Parasit. Vectors},
keywords = {Animals,Chicago,Culex,Culex: growth {\&} development,Ecosystem,Larva,Larva: growth {\&} development,Plant Development,Population Density,Water,Water: chemistry},
month = {jan},
number = {1},
