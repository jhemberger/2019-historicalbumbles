issn = {20457758},
journal = {Ecol. Evol.},
keywords = {Apis mellifera,floral diversity,honey bees,neonicotinoids,nutrition,pesticides,pollen},
number = {18},
pages = {7243--7253},
pmid = {28944014},
title = {{Honey bee-collected pollen in agro-ecosystems reveals diet diversity, diet quality, and pesticide exposure}},
