doi = {10.1002/ecm.1327},
file = {:Users/jhemberger/Documents/paper{\_}pdfs/Malfi{\_}et{\_}al-2018-Ecological{\_}Monographs.pdf:pdf},
issn = {15577015},
journal = {Ecol. Monogr.},
keywords = {Bombus,Conopidae,RFID,bumble bee,conopid fly,host–parasite interaction,simulation model,sublethal effects},
number = {4},
pages = {653--671},
title = {{The influence of conopid flies on bumble bee colony productivity under different food resource conditions}},
