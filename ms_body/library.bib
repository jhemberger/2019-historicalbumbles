journal = {AoB Plants},
keywords = {asclepias verticillata,bombus,nator decline,plant-pollinator interactions,pollen receipt,polli-,pollination services,pollinator efficiency,pollinator visitation},
number = {3},
pmid = {28798863},
title = {{Pollination success following loss of a frequent pollinator: the role of compensatory visitation by other effective pollinators}},
