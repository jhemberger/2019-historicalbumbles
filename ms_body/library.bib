keywords = {Animals,Bird Diseases,Bird Diseases: virology,Blood,Culex,Culex: physiology,Culex: virology,Feeding Behavior,Feeding Behavior: physiology,Host-Pathogen Interactions,Humans,Insect Vectors,Insect Vectors: physiology,Insect Vectors: virology,Passeriformes,Passeriformes: classification,Passeriformes: virology,Species Specificity,West Nile Fever,West Nile Fever: transmission,West Nile Fever: virology,West Nile virus},
