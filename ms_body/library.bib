keywords = {DNA barcoding,High throughput sequencing,ITS2,Illumina MiSeq platform,NGS,Next generation sequencing,Osmia,Palynology,Pollination ecology},
pmid = {26194794},
title = {{Increased efficiency in identifying mixed pollen samples by meta-barcoding with a dual-indexing approach}},
year = {2015}
