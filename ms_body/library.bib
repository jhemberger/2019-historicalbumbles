booktitle = {Ecol. Appl.},
file = {:Users/jhemberger/Library/Application Support/Mendeley Desktop/Downloaded/Redhead et al. - 2015 - Effects of habitat composition and landscape structure on worker foraging distances of five bumblebee species.pdf:pdf},
