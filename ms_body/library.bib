journal = {Ecoscience},
keywords = {Abundance,Landscape ecology,Patches,Spatial scales,Species richness},
number = {1},
pages = {117--124},
title = {{Patch characteristics and landscape context as predictors of species presence and abundance: A review}},
volume = {6},
year = {1999}
}
